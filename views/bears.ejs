<!DOCTYPE html>
<html>
<head>
	<title>My First App</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	<link rel="stylesheet" href="main.css">
</head>
<body>

<section>
	<div class="container">
		<div class="row">
			<div class="jumbotron">
				<div class="container">
					<h1>BEARS</h1>
						<a href="/" class="btn btn-primary btn-lg">Home</a>
						<a href="/about" class="btn btn-primary btn-lg">About</a>
					</p>
				</div>
			</div>
		</div>
	</div>
</section>


<section>
	<div class="container">
		<div class="row">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Name</th>
						<th>Age</th>
						<th>Gender</th>
						<th></th>
					</tr>
				</thead>
				<tbody id="bearTable">
					<% for (var i = 0; i < bearList.length; i++) { %>
						<tr id="<%= bearList[i]._id %>">
							<td><%= bearList[i].name %></td>
							<td><%= bearList[i].age %></td>
							<td><%= bearList[i].gender %></td>
							<td><button class="killBear" type="button" class="btn btn-primary">Kill Bear</button></td>
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</section>

<section>
	<div class="container">
		<div class="row">
			<form class="form-inline" role="form">
				<div class="form-group">
					<label class="sr-only" for="">label</label>
					<input type="text" name="name" class="form-control" id="name" placeholder="Name">
					<input type="text" name="age" class="form-control" id="age" placeholder="Age">
					<input type="text" name="gender" class="form-control" id="gender" placeholder="Gender">
				</div>
					<button type="submit" id="addBear" class="btn btn-primary">Birth Bear</button>
			</form>
		</div>
	</div>
</section>


	<script src="https://code.jquery.com/jquery-2.2.0.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	<script src="app.js"></script>
</body>
</html>


